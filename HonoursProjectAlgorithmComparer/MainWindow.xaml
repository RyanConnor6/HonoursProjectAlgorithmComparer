<Window x:Class="HonoursProjectAlgorithmComparer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HonoursProjectAlgorithmComparer"
        mc:Ignorable="d"
        Title="Algorithm Comparer" Height="1000" Width="1800" Left="50" Top="25">
    <Grid>
        <Canvas x:Name="canContainer" HorizontalAlignment="Left" Height="750" VerticalAlignment="Center" Width="750" Margin="951,0,0,0" RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
        <Button x:Name="startBtn" Content="Create Grid" HorizontalAlignment="Left" Height="130" Margin="47,126,0,0" VerticalAlignment="Top" Width="400" FontSize="50" FontFamily="Arial Rounded MT Bold" Click="startBtn_Click"/>
        <Button x:Name="runBtn" Content="Run Algorithm" HorizontalAlignment="Left" Height="131" Margin="47,805,0,0" VerticalAlignment="Top" Width="400" FontSize="50" FontFamily="Arial Rounded MT Bold" Click="runBtn_Click"/>
        <ComboBox Name="comboBox1" Margin="478,126,900,0" FontSize="50" FontFamily="Arial Rounded MT Bold" VerticalAlignment="Top" Height="130" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <ComboBoxItem Name ="chosen5" Content="5x5"/>
            <ComboBoxItem Name ="chosen10" Content="10x10"/>
            <ComboBoxItem Name ="chosen15" Content="15x15"/>
            <ComboBoxItem Name ="chosen20" IsSelected="True" Content="20x20"/>
            <ComboBoxItem Name ="chosen25" Content="25x25"/>
            <ComboBoxItem Name ="chosen30" Content="30x30"/>
        </ComboBox>
        <ComboBox Name="comboBox2" Margin="478,806,900,0" FontSize="50" FontFamily="Arial Rounded MT Bold" VerticalAlignment="Top" Height="130" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <ComboBoxItem Name ="AStar" IsSelected="True" Content="A*"/>
            <ComboBoxItem Name ="BreadthFirst" Content="Breadth First"/>
            <ComboBoxItem Name ="Dijkstra" Content="Dijkstra"/>
        </ComboBox>
    </Grid>
</Window>
