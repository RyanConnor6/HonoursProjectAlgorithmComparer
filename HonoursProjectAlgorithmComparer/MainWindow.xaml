<Window x:Class="HonoursProjectAlgorithmComparer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HonoursProjectAlgorithmComparer"
        mc:Ignorable="d"
        Title="Algorithm Comparer" Height="1000" Width="1800" Left="50" Top="25">
    <Grid>
        <Canvas x:Name="canContainer" HorizontalAlignment="Left" Height="750" VerticalAlignment="Center" Width="750" Margin="951,0,0,0" RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
        <Button x:Name="startBtn" Content="Change Grid Size" HorizontalAlignment="Left" Height="130" Margin="474,38,0,0" VerticalAlignment="Top" Width="400" FontSize="40" FontFamily="Arial Rounded MT Bold" Click="startBtn_Click"/>
        <Button x:Name="runBtn" Content="Run Algorithm" HorizontalAlignment="Left" Height="131" Margin="474,338,0,0" VerticalAlignment="Top" Width="400" FontSize="40" FontFamily="Arial Rounded MT Bold" Click="runBtn_Click"/>
        <ComboBox Name="comboBox1" Margin="21,38,1357,0" FontSize="40" FontFamily="Arial Rounded MT Bold" VerticalAlignment="Top" Height="130" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <ComboBoxItem Name ="chosen20" IsSelected="True" Content="20x20"/>
            <ComboBoxItem Name ="chosen25" Content="25x25"/>
            <ComboBoxItem Name ="chosen30" Content="30x30"/>
            <ComboBoxItem Name ="chosen35" Content="35x35"/>
            <ComboBoxItem Name ="chosen40" Content="40x40"/>
            <ComboBoxItem Name ="chosen45" Content="45x45"/>
            <ComboBoxItem Name ="chosen50" Content="50x50"/>
            <ComboBoxItem Name ="chosen55" Content="55x55"/>
        </ComboBox>
        <ComboBox Name="comboBox2" Margin="21,339,1357,0" FontSize="40" FontFamily="Arial Rounded MT Bold" VerticalAlignment="Top" Height="130" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <ComboBoxItem Name ="AStar" IsSelected="True" Content="A*"/>
            <ComboBoxItem Name ="Dijkstra" Content="Dijkstra"/>
            <ComboBoxItem Name ="BreadthFirst" Content="Breadth First"/>
            <ComboBoxItem Name ="GreedyBestFirst" Content="Greedy Best First"/>
        </ComboBox>
        <CheckBox Name ="Diagonal" Content="Allow Diagonal Movement" HorizontalAlignment="Left" Height="16" Margin="21,216,0,0" VerticalAlignment="Top" Width="162" IsChecked="True">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="4" ScaleY="4" />
            </CheckBox.LayoutTransform>
        </CheckBox>
        <Canvas Margin="21,584,926,114" Background="#FFD3D6FF">
            <Label Name="algLabel" Content="Algorithm Run: N/A" FontSize="50" FontFamily="Arial Rounded MT Bold" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="78" Width="853"/>
            <Label x:Name="algLabel2" Content="Time Taken: N/A" FontSize="50" FontFamily="Arial Rounded MT Bold" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Height="78" Width="853"/>
            <Label x:Name="algLabel3" Content="Path Size Found: N/A" FontSize="50" FontFamily="Arial Rounded MT Bold" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Height="78" Width="853"/>
        </Canvas>
    </Grid>
</Window>
