<Window x:Class="HonoursProjectAlgorithmComparer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HonoursProjectAlgorithmComparer"
        mc:Ignorable="d"
        Title="Algorithm Comparer" Height="1000" Width="1800" Left="50" Top="25">
    <Grid>
        <Canvas x:Name="canContainer" HorizontalAlignment="Left" Height="750" VerticalAlignment="Top" Width="750" Margin="942,121,0,0" RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
        </Canvas>
        <Button x:Name="startBtn" Content="Create Grid" HorizontalAlignment="Left" Height="65" Margin="21,137,0,0" VerticalAlignment="Top" Width="300" FontSize="30" FontFamily="Arial Rounded MT Bold" Click="startBtn_Click"/>
        <Button x:Name="runBtn" Content="Run Algorithm" HorizontalAlignment="Left" Height="65" Margin="18,643,0,0" VerticalAlignment="Top" Width="300" FontSize="30" FontFamily="Arial Rounded MT Bold" Click="runBtn_Click"/>
        <ComboBox Name="comboBox1" Margin="351,137,1149,0" FontSize="30" FontFamily="Arial Rounded MT Bold" VerticalAlignment="Top" Height="65" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <ComboBoxItem Name ="chosen20" IsSelected="True" Content="20x20"/>
            <ComboBoxItem Name ="chosen25" Content="25x25"/>
            <ComboBoxItem Name ="chosen30" Content="30x30"/>
            <ComboBoxItem Name ="chosen35" Content="35x35"/>
            <ComboBoxItem Name ="chosen40" Content="40x40"/>
            <ComboBoxItem Name ="chosen45" Content="45x45"/>
            <ComboBoxItem Name ="chosen50" Content="50x50"/>
            <ComboBoxItem Name ="chosen55" Content="55x55"/>
        </ComboBox>
        <ComboBox Name="comboBox2" Margin="351,648,1149,0" FontSize="30" FontFamily="Arial Rounded MT Bold" VerticalAlignment="Top" Height="65" Width="300" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <ComboBoxItem Name ="AStar" IsSelected="True" Content="A*"/>
            <ComboBoxItem Name ="Dijkstra" Content="Dijkstra"/>
            <ComboBoxItem Name ="BreadthFirst" Content="Breadth First"/>
            <ComboBoxItem Name ="GreedyBestFirst" Content="Greedy Best First"/>
        </ComboBox>
        <CheckBox Name ="Diagonal" Content="Allow Diagonal Movement" HorizontalAlignment="Left" FontSize="10" Height="16" Margin="20,405,0,0" VerticalAlignment="Top" Width="160" IsChecked="True">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="4" ScaleY="4" />
            </CheckBox.LayoutTransform>
        </CheckBox>
        <Label Content="Create Grid" FontSize="70" FontFamily="Arial Rounded MT Bold" HorizontalAlignment="Left" Height="90" Margin="133,42,0,0" VerticalAlignment="Top" Width="413"/>
        <Label Content="Movement Options" FontSize="70" FontFamily="Arial Rounded MT Bold" HorizontalAlignment="Left" Height="84" Margin="18,316,0,0" VerticalAlignment="Top" Width="643"/>
        <Label Content="Algorithm To Run" FontSize="70" FontFamily="Arial Rounded MT Bold" HorizontalAlignment="Left" Height="90" Margin="33,553,0,0" VerticalAlignment="Top" Width="616"/>
    </Grid>
</Window>
